<%- model_class = SubPackage.new.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:name) %></th>
      <th><%= model_class.human_attribute_name(:package_id) %></th>
      <th><%= model_class.human_attribute_name(:address_id) %></th>
      <th><%= model_class.human_attribute_name(:tracking_number_cn) %></th>
      <th><%= model_class.human_attribute_name(:carrier_id) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:contents) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @sub_packages.each do |sub_package| %>
      <tr>
        <td><%= link_to sub_package.id, sub_package_path(sub_package) %></td>
        <td><%= sub_package.name %></td>
        <td><%= sub_package.package_id %></td>
        <td><%= sub_package.address_id %></td>
        <td><%= sub_package.tracking_number_cn %></td>
        <td><%= sub_package.carrier_id %></td>
        <td><%= sub_package.user_id %></td>
        <td><%= sub_package.contents %></td>
        <td><%=l sub_package.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_sub_package_path(sub_package), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      sub_package_path(sub_package),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_sub_package_path,
            :class => 'btn btn-primary' %>
