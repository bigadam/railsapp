<dl class="dl-horizontal">
  <dt><strong>country_id:</strong></dt>
  <dd><%= address.country_id %></dd>
  <dt><strong>province:</strong></dt>
  <dd><%= address.province %></dd>
  <dt><strong>city:</strong></dt>
  <dd><%= address.city %></dd>
  <dt><strong>street:</strong></dt>
  <dd><%= address.street %></dd>
  <dt><strong>building_number:</strong></dt>
  <dd><%= address.building_number %></dd>
  <dt><strong>apt_number:</strong></dt>
  <dd><%= address.apt_number %></dd>
  <dt><strong>zip:</strong></dt>
  <dd><%= address.zip %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_address_path(address), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              address_path(address),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
